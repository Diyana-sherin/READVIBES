<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Category</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 50px;
            max-width: 600px;
            background-color: #e9ecef;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #6c757d;
        }

        .form-group label {
            color: #333;
        }

        .form-control {
            border: 1px solid #6c757d;
            border-radius: 5px;
        }

        .btn-primary {
            background-color: #6c757d;
            border: none;
            color: white;
            border-radius: 20px;
            padding: 10px 20px;
            display: block;
            width: 100%;
            font-size: 16px;
        }

        .btn-primary:hover {
            background-color: #5a6268;
        }

        .error-message {
            color: red;
            font-size: 14px;
            display: none;
        }
    </style>
</head>

<body>

    {{> admin/header}}
    <div class="main-content mt-5">
    <div class="container">
        <h2 class="text-center">Add Category</h2>
        {{#if message}}
                <div class="alert alert-danger" role="alert">
                    {{message}}
                </div>
                {{/if}}
        <form id="addCategoryForm" action="/admin/addCategory" method="POST" onsubmit="return validateForm()">
            <div class="form-group">
                <label for="name">Category Name</label>
                <input type="text" id="name" name="name" class="form-control" placeholder="Enter category name">
                <small class="error-message" id="nameError">Category name is required</small>
            </div>
            <div class="form-group">
                <label for="description" >Category Description:</label>
    <textarea id="description" name="description" class="form-control" rows="4" placeholder="Enter category details"></textarea>
                <small class="error-message" id="aboutError">About information is required</small>
            </div>
            <button type="submit" class="btn btn-primary">Add Category</button>
        </form>
    </div>
    </div>

    {{> admin/footer}}

    <script>
        function validateForm() {
            let isValid = true;

            // Clear previous error messages
            document.getElementById('nameError').style.display = 'none';
            document.getElementById('aboutError').style.display = 'none';

            // Validate Category Name
            const nameInput = document.getElementById('name').value.trim();
            if (nameInput === '') {
                document.getElementById('nameError').style.display = 'block';
                isValid = false;
            }

            // Validate About Information
            const aboutInput = document.getElementById('description').value.trim();
            if (aboutInput === '') {
                document.getElementById('aboutError').style.display = 'block';
                isValid = false;
            }

            return isValid;
        }
    </script>
</body>

</html>

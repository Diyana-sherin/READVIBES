      background-color: #e0e0e0;
      border: none;
      border-radius: 8px;
      overflow: hidden;
    }

    .card-title {
      font-size: 1.1rem;
      font-weight: bold;
      color: #333;
    }

    .author-name {
      color: #666;
      font-size: 0.9rem;
      margin-bottom: 10px;
    }

    .price-section {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: 5px;
    }

    .original-price {
      text-decoration: line-through;
      color: #888;
    }

    .sales-price {
      font-weight: bold;
      color: #d9534f;
    }

    .rating {
      color: #f0ad4e;
      font-size: 1rem;
      margin-top: 5px;
    }

    .icon-section i {
      font-size: 1.2rem;
      cursor: pointer;
      color: #555;
    }

    .icon-section i:hover {
      color: #333;
    }

    .view-more-btn {
      font-weight: bold;
      color: #000000;
      border-color: #bc6666;
      border-radius: 1.5rem;
    }

    .view-more-btn:hover {
      background-color: #b37575;
      color: #000000;
    }
    .feature-section {
      background-color: #f8f9fa;
      padding: 40px ;
      margin-bottom: 30px;
    }
    .feature-item {
      text-align: center;
      transition: transform 0.3s ease;
    }
